#!/usr/bin/env sh

npm run format
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com Prittier. Arrume antes de continuar... ðŸ˜‰";
    exit 1;
fi;

npm run lint
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com Lint. Arrume antes de continuar... ðŸ˜‰";
    exit 1;
fi;

npm run test
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com Jest. Arrume antes de continuar... ðŸ˜‰";
    exit 1;
fi;

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".(ts|html)\{0,1\}$") || true

for FILE in $STAGED_FILES
do
    ./vendor/bin/pint "${FILE}" > /dev/null >&1;
    git add "${FILE}";
done;

exit 0;
